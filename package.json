{
  "scripts": {
    "test": "standard && vnu --skip-non-html --Werror *.html",
    "tailwind": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "dev": "browser-sync start --no-notify --server --startPath /dist/index.html --files '*.html,*.css,*.js'",
    "start": "npm-run-all --parallel dev tailwind",
    "lint": "standard --fix"
  },
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "npm-run-all": "^4.1.5",
    "standard": "^17.0.0",
    "tailwindcss": "^3.2.4"
  }
}
